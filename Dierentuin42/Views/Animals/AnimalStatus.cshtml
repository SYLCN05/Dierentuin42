@model IEnumerable<Dierentuin42.Models.Animal>

@{
    ViewData["Title"] = "Dierenstatus - " + ViewBag.Action;
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">
                <i class="fas fa-paw me-2"></i> @ViewData["Title"]
            </h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="fas fa-id-badge"></i> Naam</th>
                            <th><i class="fas fa-dog"></i> Soort</th>
                            <th><i class="fas fa-moon"></i> Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Species</td>
                                <td>
                                    @if (item.AnimalActivityPattern == Dierentuin42.Models.Animal.ActivityPattern.Cathemeral)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-sun"></i> Altijd actief
                                        </span>
                                    }
                                    else if (ViewBag.Action == "Sunrise" && item.AnimalActivityPattern == Dierentuin42.Models.Animal.ActivityPattern.Diurnal)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-sun"></i> Wakker
                                        </span>
                                    }
                                    else if (ViewBag.Action == "Sunset" && item.AnimalActivityPattern == Dierentuin42.Models.Animal.ActivityPattern.Nocturnal)
                                    {
                                        <span class="badge bg-info text-dark">
                                            <i class="fas fa-moon"></i> Wakker
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-bed"></i> Slapend
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
