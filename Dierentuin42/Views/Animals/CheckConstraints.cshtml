@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Check Constraints";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">
                <i class="fas fa-check-circle me-2"></i> @ViewData["Title"]
            </h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Naam</th>
                            <th>Soort</th>
                            <th>Categorie</th>
                            <th>Eis</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var animal in Model)
                        {
                            foreach (var constraint in animal.Constraints)
                            {
                                <tr>
                                    <td>@animal.Animal</td>
                                    <td>@animal.Species</td>
                                    <td>@animal.Category</td>
                                    <td>@constraint.Key</td>
                                    <td>
                                        @if (constraint.Value)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle me-1"></i> Voldoet
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times-circle me-1"></i> Voldoet niet
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
