@model Dierentuin42.Models.Animal

@{
    ViewData["Title"] = "Creëer een nieuwe Dier";
}

<h1 class="text-center text-primary mt-5">Creëer een Nieuw Dier</h1>
<hr class="my-4" style="border: 0; border-top: 3px solid #007bff; margin: 5px 0;">

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="bg-white p-4 rounded shadow-sm border">
                <h5 class="text-primary text-center mb-4">Vul de gegevens van het nieuwe dier in</h5>

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Species" class="control-label"></label>
                        <input asp-for="Species" class="form-control" />
                        <span asp-validation-for="Species" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label"></label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                            <option value="">Selecteer Categorie</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AnimalSize" class="control-label"></label>
                        <select asp-for="AnimalSize" class="form-control">
                            <option value="">Selecteer Grootte</option>
                            @foreach (var size in Enum.GetValues(typeof(Dierentuin42.Models.Animal.Size)).Cast<Dierentuin42.Models.Animal.Size>())
                            {
                                <option value="@size">@size</option>
                            }
                        </select>
                        <span asp-validation-for="AnimalSize" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AnimalDiet" class="control-label"></label>
                        <select asp-for="AnimalDiet" class="form-control">
                            <option value="">Selecteer Dieet</option>
                            @foreach (var diet in Enum.GetValues(typeof(Dierentuin42.Models.Animal.DietaryClass)).Cast<Dierentuin42.Models.Animal.DietaryClass>())
                            {
                                <option value="@diet">@diet</option>
                            }
                        </select>
                        <span asp-validation-for="AnimalDiet" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AnimalActivityPattern" class="control-label"></label>
                        <select asp-for="AnimalActivityPattern" class="form-control">
                            <option value="">Selecteer Activiteitspatroon</option>
                            @foreach (var activityPattern in Enum.GetValues(typeof(Dierentuin42.Models.Animal.ActivityPattern)).Cast<Dierentuin42.Models.Animal.ActivityPattern>())
                            {
                                <option value="@activityPattern">@activityPattern</option>
                            }
                        </select>
                        <span asp-validation-for="AnimalActivityPattern" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Prey" class="control-label"></label>
                        <input asp-for="Prey" class="form-control" />
                        <span asp-validation-for="Prey" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="EnclosureId" class="control-label"></label>
                        <select asp-for="EnclosureId" class="form-control" asp-items="ViewBag.EnclosureId">
                            <option value="">Selecteer Verblijf</option>
                        </select>
                        <span asp-validation-for="EnclosureId" class="text-danger"></span>
                            <label class="control-label"></label>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="resetAll" name="resetAll" value="true" />
                            <label class="form-check-label" for="resetAll">Verblijven Aanvullen</label>
                        </div>

                    </div>

                    <div class="form-group">
                        <label asp-for="spaceRequirement" class="control-label"></label>
                        <input asp-for="spaceRequirement" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="spaceRequirement" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="SecurityRequirement" class="control-label"></label>
                        <select asp-for="SecurityRequirement" class="form-control">
                            <option value="">Selecteer Beveiliging</option>
                            @foreach (var security in Enum.GetValues(typeof(Dierentuin42.Models.Enclosure.SecurityLevel)).Cast<Dierentuin42.Models.Enclosure.SecurityLevel>())
                            {
                                <option value="@security">@security</option>
                            }
                        </select>
                        <span asp-validation-for="SecurityRequirement" class="text-danger"></span>
                    </div>

                    <hr class="my-3" style="border: 0; border-top: 3px solid #007bff; margin: 5px 0;" />

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary btn-lg shadow-lg d-flex justify-content-center align-items-center">
                            <i class="fas fa-save" style="margin-right: 8px;"></i> Creëer Dier
                        </button>

                        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-lg d-flex justify-content-center align-items-center">
                            <i class="fas fa-arrow-left" style="margin-right: 8px;"></i> Terug naar overzicht
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<style>
