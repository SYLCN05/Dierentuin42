    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: all 0.3s ease;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        transition: all 0.3s ease;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .btn-secondary:hover {
            background-color: #5a6368;
            border-color: #545b61;
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

    .form-label {
        font-weight: 600;
    }

    .form-control {
        height: 38px;
    }

    .control-label {
        font-size: 14px;
        font-weight: bold;
        color: #495057;
    }

    hr.my-3 {
        border: 0;
        border-top: 3px solid #007bff;
