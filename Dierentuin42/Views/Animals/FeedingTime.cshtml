@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Feeding Time - " + ViewBag.Action;
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-success text-white text-center">
            <h3 class="mb-0">
                <i class="fas fa-utensils me-2"></i> @ViewData["Title"]
            </h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="fas fa-paw"></i> Naam</th>
                            <th><i class="fas fa-drumstick-bite"></i> Prooi</th>
                            <th><i class="fas fa-seedling"></i> Dieet</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var feedingTime in Model)
                        {
                            <tr>
                                <td>@feedingTime.Animal</td>
                                <td>@feedingTime.Prey</td>
                                <td>
                                    @if (feedingTime.Diet.ToString().ToLower() == "herbivore")
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-leaf"></i> Herbivoor
                                        </span>
                                    }
                                    else if (feedingTime.Diet.ToString().ToLower() == "carnivore")
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-drumstick-bite"></i> Carnivoor
                                        </span>
                                    }
                                    else if (feedingTime.Diet.ToString().ToLower() == "omnivore")
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-bread-slice"></i> Omnivoor
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-question"></i> Onbekend
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
