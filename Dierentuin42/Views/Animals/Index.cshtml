@model IEnumerable<Dierentuin42.Models.Animal>

@{
    ViewData["Title"] = "Index";
}

<h1>Dieren</h1>

<p>
    <a asp-action="Create">Creëer een nieuwe dier </a>
</p>
<p>
    <a asp-action="Search">Zoek een Dier</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalDiet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalActivityPattern)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prey)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enclosure)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecurityRequirement)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnimalSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnimalDiet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnimalActivityPattern)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prey)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Enclosure.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecurityRequirement)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
