@model Dierentuin42.Models.Category

@{
    ViewData["Title"] = "Verwijder Categorie";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJ6Y89gD4L09kLgRor4OlY1aNzRzQ+1fUj28FXY1kcV9K0pKa8gU6v7xgJxw5" crossorigin="anonymous">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />

<h1 class="text-center text-danger mt-5">Verwijder Categorie</h1>

<h4 class="text-center text-muted">Weet je zeker dat je deze categorie wilt verwijderen?</h4>
<hr class="my-4">

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="bg-white p-4 rounded shadow-sm border">
                <h5 class="text-danger text-center mb-4">Details van de Categorie</h5>

                <!-- GECORRIGEERDE TABEL -->
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <td class="fw-bold">@Html.DisplayNameFor(model => model.Name)</td>
                            <td>@Html.DisplayFor(model => model.Name)</td>
                        </tr>
                    </tbody>
                </table>

                <hr class="my-4">

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger btn-lg w-48 shadow-lg">
                            <i class="fas fa-trash-alt"></i> Verwijder Categorie
                        </button>

                        <a asp-action="Index" class="btn btn-secondary btn-lg w-48 shadow-lg">
                            <i class="fas fa-arrow-left"></i> Terug naar overzicht
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8d7da;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        max-width: 900px;
    }

    .shadow-sm {
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    .shadow-lg {
        box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.15);
    }

    .btn-danger {
        background-color: #e94e77;
        border-color: #e94e77;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #d84361;
            border-color: #d84361;
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        transition: all 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

    h5 {
        margin-bottom: 20px;
    }

    hr.my-4 {
        border: 0;
        border-top: 3px solid #e94e77;
        margin: 20px 0;
    }

    .table-striped tbody tr:nth-child(odd) {
        background-color: #f9f9f9;
    }

    .d-flex {
        display: flex;
        justify-content: space-between;
    }

    .w-48 {
        width: 48%;
    }

    .btn-danger i, .btn-secondary i {
        margin-right: 8px;
    }

    .fw-bold {
        font-weight: bold;
    }
</style>
