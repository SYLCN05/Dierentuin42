@model IEnumerable<Dierentuin42.Models.Enclosure>

@{
    ViewData["Title"] = "Index";
}

<h1>Verblijven</h1>

<p>
    <a asp-action="Create">Creëer een nieuwe categorie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Zoo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnclosureClimate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnclosureHabitatType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnclosureSecurityLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zoo.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnclosureClimate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnclosureHabitatType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnclosureSecurityLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
