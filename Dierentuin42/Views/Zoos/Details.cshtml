@model Dierentuin42.Models.Zoo

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Zoo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Verblijven
        </dt>
        <dd class="col-sm-10">
            @foreach(var enclosure in Model.Enclosures)
            {
                <li>@enclosure.Name</li>
            }

        </dd>
    
    
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Terug naar overzicht</a>
</div>
